<!DOCTYPE html>
<html>
  <head>
    <title>DairyDunkers Admin Panel</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'admin_panel', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin_panel', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-section" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            <%= image_tag "logo-nav.png", height: '30', alt: "Dairy Dunkers" %>
          </a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse-section">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to('Reset Password', edit_admin_registration_path) %></li>
            <li><%= link_to('Logout', destroy_admin_session_path, method: :delete) %></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Devise Alerts -->
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
