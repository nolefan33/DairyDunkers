<% if admin_signed_in? %>
  <div class="container">
    <div class="container-fluid">
      <div class="row">
        <div id="add-cookie" class="col-md-6 col-xs-12">
          <h3>Add Cookie</h3>
          <%= form_tag '/cookies/create', { :multipart => true } do %>
            <p>
              <%= label_tag 'photo', "Cookie Picture" %>
              <%= file_field_tag 'photo' %>
            </p>
            <p>
              <%= label_tag 'title', "Cookie Title" %>
              <%= text_field_tag 'title' %>
            </p>
            <p>
              <%= label_tag 'description', "Cookie Description" %>
              <%= text_field_tag 'description' %>
            </p>
            <p>
              <%= submit_tag "Submit" %>
            </p>
          <% end %>
        </div>
        <div id="email-signup-list" class="col-md-6 col-xs-12">
          <h3>Email Signups</h3>
          <div style="max-height: 90vh; overflow: auto;">
            <% @signups.each do |signup| %>
              <p><%= signup.email %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div id="add-admin" class="col-md-6 col-xs-12">
          <h3>Add New Admin</h3>
          <%= form_tag admin_create_path, method: :post do %>
            <p>
              <%= label_tag 'email', "Email" %>
              <%= text_field_tag 'email' %>
            </p>
            <p>
              <%= label_tag 'password', "Password" %>
              <%= password_field_tag 'password' %>
            </p>
            <p>
              <%= label_tag 'confirm_password', "Confirm Password" %>
              <%= password_field_tag 'confirm_password' %>
            </p>
            <p>
              <%= submit_tag "Create" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
